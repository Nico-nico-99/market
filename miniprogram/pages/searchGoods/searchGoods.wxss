/* miniprogram/pages/searchGoods/searchGoods.wxss */
/* 引入商品样式 */
@import "../../templates/commodityList/commodityList.wxss";

/*搜索框样式*/
.searchBox {
  height: 30px;
  padding: 10px;
  background-color: #66ccff;
  display: flex;
}
/*搜索类别样式*/
.searchBox .left_select {
  flex: 2;
  padding-right: 10rpx;
}
.searchBox .left_select picker {
  background-color: #fff;
  color: #0082bf;
  height: 30px;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/*搜索输入框样式*/
.searchBox .centre_input {
  flex: 5;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 15rpx;
  color: #666;
}
/*搜索按钮样式*/
.searchBox .right_btn {
  flex: 1.5;
}

/*筛选方式样式*/
.filter_area {
  float: right;
  background-color: #79d3ff;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.filter_area .title {
  padding: 10px;
  color: #fff;
  font-size: large;
}
.filter_area text {
  padding: 5px;
}
.filter_area picker {
  background-color: #fff;
  color: #0082bf;
  height: 30px;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 140rpx;
}

/*用户列表样式*/
.users-box{
  background-color: #fff;
  padding: 10rpx;
}
/*用户昵称样式*/
.users-box .name{
  text-align: left;  
  font-size: 18px;
}
/*用户信息样式*/
.users-box .inf{
  text-align: left;  
  font-size: 14px;
}
.users-box .inf .title{
  text-align: left;  
  font-size: 14px;
  color: #0082bf;
}