/* pages/addGood/addGood.wxss */


/************************* 标题样式 *************************/
.title{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 背景图 */
.title.background{
  width: 100vw;
  height: 13vw;

  background-color: #27aff6;
}
/* 标题 */
.title.text{
  color: white;

  font-size: 5vw;
  font-weight: bold;
}
/***********************************************************/

/* 全页容器 */
.pageContainer{
   display: flex; 
   flex-direction: column;
   align-items: center;
}

.gap{
  height:0.5vw;
}

/************************* 商品名称 *************************/
.titleContainer{
  height: 15vw;
  width: 90vw;
}
/* 背景图 */
.titleContainer.background{
  flex-direction: row;

  height: 15vw;
  width: 90vw;

  display: flex;
  justify-content: space-between;
  align-items: center;

  background-color: white;
  border-radius: 10rpx;
}
/* title */
.titleContainer.TitleView{
  display: flex;
  align-items: center;

  position: relative;
  left: 5vw;

  width: 20vw;

  font-size: 3.89vw;
}
/* titleInput */
.titleContainer.titleInputView{
  position: relative;
  left: -5vw;

  height: 15vw;
  width: 57.5vw;
  line-height: 28px;

  font-size: 3.89vw;

  text-align: right;
}
/***********************************************************/

/************************* 商品描述 *************************/
.detailInputContainer{
  height: 50vw;
  width: 90vw;
}
.detailInputContainer.background{
  flex-direction: column;

  height: 62vw;
  width: 90vw;

  display: flex;
  align-items: left;
  justify-content: space-between;

  background-color: white;
  border-radius: 10rpx;
}
/* title */
.detailInputContainer.detailTitleView{
  position: relative;
  left: 5vw;
  top: 2.6vw;

  height: 42vw;
  width: 20vw;

  font-size: 3.89vw;
}
/* detail */
.detailInputContainer.detail{
  position: relative;
  left: 2.5vw;
  bottom: 2.6vw;

  width: 84vw;
  height: 48vw;

  border-radius: 10rpx;
  border: 0.4vw solid rgb(240, 240, 240);
}
.detailInputContainer.detailText{
  position: relative;
  top: 1vw;
  left: 2.3vw;

  width: 80vw;
  font-size: 3.89vw;
  text-align: left;
}
/***********************************************************/

/************************* 商品价格 *************************/
.priceContainer{
  height: 15vw;
  width: 90vw;
}
/* 背景图 */
.priceContainer.background{
  flex-direction: row;

  height: 15vw;
  width: 90vw;

  display: flex;
  justify-content: space-between;
  align-items: center;

  background-color: white;
  border-radius: 10rpx;
}
/* price */
.priceContainer.priceView{
  display: flex;
  align-items: center;

  position: relative;
  left: 5vw;
  width: 20vw;

  font-size: 3.89vw;
}
/* priceInput */
.priceContainer.priceInputView{
  position: relative;
  left: -5vw;

  height: 15vw;
  width: 57.5vw;
  line-height: 28px;

  font-size: 3.89vw;

  text-align: right;
}
/***********************************************************/

/************************* 是否全新 *************************/
.radio-group{
  display: flex; 
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  margin-right: 10rpx;
  margin-left: 10rpx;

  height: 15vw;
  width: 90vw;

  background-color: white;

  font-size: 3.89vw;
}
.radio-group.radioTitleView{
  display: flex;
  justify-content: flex-start;

  position: relative;
  left: 3.5vw;
}
.radio{
  display: flex; 
  flex-direction: row;
  justify-content: space-evenly;

  width: 40vw;
  align-items: center;

  position: relative;
  left: -5vw;
}
/***********************************************************/

/************************* picker *************************/
.section{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;

  height: 15vw;
  width: 90vw;

  background-color: white;
  border-radius: 10rpx;
}
.section.picker{
  display: flex;
  justify-content: right;
  text-align: right;

  width: 50vw;
  font-size: 3.89vw;
}
.section.section_title{
  position: relative;
  left: 5vw;

  width: 20vw;

  font-size: 3.89vw;
}
/* pickerText */
.section.pickerText{
  position: relative;
  left: -5vw;
  width: 20vw;

  display: flex;
  text-align: right;
  justify-content: flex-end;
  font-size: 3.89vw;
}
/***********************************************************/
.typeSelectContainer{
  display: flex; 
  flex-direction: row;
}

.selectBoxcontain{
  width:450rpx;
}

/* 上传图片相关 */
.weui-uploader{
  margin: 10rpx;
}
.ImgsContainer{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start
}
.OneImgsContainer{
  position: relative;
  width:220rpx;
  height:220rpx;
  margin-left:15rpx;
}
.imgShow{
  width:220rpx;
  height:220rpx;
  margin:10rpx;
}
.deleteImg{
  width:40rpx;
  height:40rpx;
  position: absolute; 
  right: 2px;    
  left: auto;
  top: 10px;
}

.uploadImgBtn{
  display: flex;
  justify-content:center;
  align-items: center;
  text-align: center;

  position: relative;
  top: 3vw;

  width:200rpx;
  height:80rpx;

  margin-right: 15rpx;
  margin-left:440rpx;
  
  background-color: #27aff6;
  border-radius: 20rpx;
}

.uploadgood{
  width:500rpx;
  height:80rpx;
  border-radius: 20rpx;
  margin-left:125rpx;
  background-color: #27aff6;
  display: flex;
  justify-content:center;
  align-items: center;
  text-align: center;
  
  position: relative;
  top: 3vw;
}
.btnText{
  color:white;

  font-size: 4vw;
}