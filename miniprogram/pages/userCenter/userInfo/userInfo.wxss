.userName.background{
  flex-direction: row;

  height: 15vw;
  width: 90vw;

  display: flex;
  justify-content: space-between;
  justify-content: center;

  background-color: white;
  border-radius: 10rpx;
}
/* text */
.userName.text{
  position: relative;
  left: 3.5vw;
  top: 5vw;

  font-size: 3.89vw;
}
/* nickName */
.userName.nickName{
  position: relative;
  left: -3.5vw;
  top: 5vw;

  font-size: 3.89vw;

  text-align: right;

  color: darkgray;
}
/***********************************************************/

