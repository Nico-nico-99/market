/* miniprogram/pages/userCenter/userInfo/userInfo.wxss */

/************************* 标题样式 *************************/
.title{
  display: flex;
  justify-content: center;
  align-items: center;

  overflow-x: hidden;
  width: 100vw;
}
/* 背景图 */
.title.background{
  width: 100vw;
  height: 13vw;

  background-color: #27aff6;
}
/* 标题 */
.title.text{
  color: white;

  font-size: 5vw;
  font-weight: bold;
}
/***********************************************************/

/*********************** 用户头像样式 ***********************/
.userImage{
  position: relative;
  top: 2.5vw;
  left:2.5vw;

  height: 15vw;
  width: 90vw;
}
/* 背景图 */
.userImage.background{
  flex-direction: row;
  justify-content: space-between;

  height: 15vw;
  width: 90vw;

  display: flex;

  background-color: white;
  border-radius: 10rpx;
}
/* text */
.userImage.text{
  position: relative;
  left: 3.5vw;
  top: 5vw;

  font-size: 3.89vw;
}
/* image */
.userImage.image{
  position: relative;
  left: -3.5vw;
  top: 1vw;

  width: 13vw;
  height: 13vw;
}
/***********************************************************/

/*********************** 用户昵称样式 ***********************/
.userName{
  position: relative;
  top: 4vw;
