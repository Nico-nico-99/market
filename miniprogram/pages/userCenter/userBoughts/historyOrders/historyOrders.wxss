.orderInfo.orderStart{
  height: 9vw;

  position: relative;
  left: 2.5vw;
  top: 9vw;

  font-size: 4vw;
}
/* orderEnd */
.orderInfo.orderEnd{
  height: 9vw;

  position: relative;
  left: 2.5vw;
  top: 9vw;

  font-size: 4vw;
}
