<!--miniprogram/templates/goodsListsItem2/goodsListItem2.wxml-->

<wxs module="filters" src="../../utils/filters.wxs"></wxs>

<template name="goodsListItem2">

<!-- 将导入数据列表放在模板外完成 -->
<!-- <view class="goods-box2" wx:for="{{goods}}" wx:key="id" bindtap="toDetailsTap" data-id="{{item.cm_id}}"> -->
  <view class="goods-box">
    <image class="goods-box image" src="{{picture_url1}}" mode="aspectFill" lazy-load="true" />

    <view class='goods-box info'>
      <!-- title -->
      <view class="goods-box info title">{{name}}</view>

      <view class="goods-box info priceANDaddress">
        <!-- price保留两位小数显示 -->
        <view  class="goods-box info priceANDaddress price">¥<span>{{filters.toFix(price)}}</span></view>

        <view class="goods-box info priceANDaddress address" wx:if="{{address == 1 }}">大学城</view>
        <view class="goods-box info priceANDaddress address" wx:if="{{address == 2 }}">五山</view>
        <view class="goods-box info priceANDaddress address" wx:if="{{address == 3 }}">国际</view>
        <view class="goods-box info priceANDaddress address" wx:if="{{address == 4 }}">其他</view>
      </view>

    </view>
  </view>
</template>

<!-- 请调整伸缩盒子使一行显示两个，请调整"filters.toFix2(price)"的使用使保留两位整数[假设需要的话] -->
